{{#with model}}
	<header>
		<div class="section-wrapper">
			<div class="header-action-wrapper">
				{{#link-to "details" class="header-action-icon header-action-back"}}{{/link-to}}
			</div>
			<div class="header-title-wrapper">
				<h1 class="header-title">
					Palettes
				</h1>
			</div>
		</div>
	</header>
	<main class="card-area">
		<div class="section-wrapper">
			{{#each palettes}}
				<div {{action "save" this}} class="card-item card-item-action-container fx-slide-in">
					<div class="card-item-segment">
						{{#with this}}
							<div class="card-item-color-list">
								{{#each colors}}
									<div class="card-item-color-list-item" {{bind-attr style=this}}></div>
								{{/each}}
							</div>
						{{/with}}
					</div>
					<div class="card-item-segment">
						<div class="card-item-text">{{name}}</div>
					</div>
				</div>
			{{/each}}
		</div>
	</main>
{{/with}}
