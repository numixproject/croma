{{#with model}}
    <header>
        <div class="section-wrapper">
            <div class="header-action-wrapper">
                {{#link-to "index" class="header-action-icon header-action-back"}}{{/link-to}}
            </div>
            <div class="header-title-wrapper">
                <h1 class="header-title">
                    Colors
                </h1>
            </div>
        </div>
    </header>
    <main class="card-area">
        <div class="section-wrapper">
            <div class="card-item fx-slide-in">
                {{#each this}}
                    {{#with this}}
                        <div class="card-item-color-item" {{bind-attr style=cssStr}}>
                            {{value}}
                        </div>
                    {{/with}}
                {{/each}}
            </div>

            <div class="paper-button-container fx-slide-in">
                <a {{action "save" this "save"}} class="paper-button paper-button-block paper-ripple">
                    Save as new palette
                </a>
            </div>

            <div class="paper-button-container fx-slide-in">
                <a {{action "save" this "add"}} class="paper-button paper-button-block paper-ripple">
                    Add to existing palette
                </a>
            </div>
        </div>
    </main>
{{/with}}
