<header>
	<div class="section-wrapper">
		<div class="header-action-wrapper">
			{{#link-to "palette.show" class="header-action-icon header-action-back"}}{{/link-to}}
		</div>
		<div class="header-title-wrapper">
			<h1 class="header-title">
				Select a palette
			</h1>
		</div>
	</div>
</header>
<main class="card-area">
	<div class="section-wrapper">
		{{#if model.length}}
			<ul class="card-item card-item-select-list fx-slide-in">
				{{#each model}}
					<li {{action "add" this}}>{{this}}</li>
				{{/each}}
			</ul>
		{{else}}
			<div class="empty-area">
				<div class="empty-area-action">
					No palettes found
				</div>
			</div>
		{{/if}}
	</div>
</main>
